{
  "listeners": [
    {
      "address": "tcp://127.0.0.1:8080",
      "bind_to_port": true,
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "backend",
                  "domains": ["*"],
                  "routes": [
                    {
                      "prefix": "/",
                      "cluster": "service"
                    }
                  ]
                }
              ]
            },
            "access_log": [
              {
                "path": "/dev/null"
              }
            ],
            "filters": [
              {
                "type": "decoder",
                "name": "auth_request",
                "config": {}
              },
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://127.0.0.1:8081"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "service",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://127.0.0.1:8000"
          }
        ]
      },
      {
        "name": "auth-upstream",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://127.0.0.1:9000"
          }
        ]
      }
    ]
  }
}
